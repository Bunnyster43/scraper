{{!-- body --}}
<div class="container-fluid px-2">
    <div class="col-lg-12" id="search-results">

        {{!-- Save Articles --}} 
        {{#each articles}}
        <div id={{this.id}}>
            <div class="card mb-4 card text-center">
                <h3 class="card-header bg-primary text-white">{{this.title}}</h3>
                <div class="card-body">
                    <p class="card-text">{{this.summary}}</p>
                    <button class="btn btn-info btn-success btn-sm" id="savearticle" data-id={{this.id}}>Save Article</button>
                </div>
            </div>
        </div>
        {{/each}} 
        {{!--Clear Articles --}} 
        {{#if articles}}
        <footer class="footer">
            <div class="container text-center">
                <button type="button" class="btn btn-danger btn-lg" id="cleardb">Clear Articles</button>
            </div>
        </footer>
        {{else}} 
        {{!-- no new articles --}}
        <div class="card">
            <h3 class="card-header text-Black text-center">
                No New Articles
            </h3>
        </div>
        {{/if}}

    </div>
</div>