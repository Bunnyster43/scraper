<!DOCTYPE html>
<html lang="en-us">

{{!-- top --}}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scraper Review</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/css/style.css">
</head>

<body>

    {{!-- title --}}
    <div class="jumbotron jumbotron-fluid text-center text-white">
        <h1 class="display-3">Nintendo Life</h1>
        <h1 class="display-3">The A.V. Club</h1>
    </div>

    {{!-- nav --}}
    <nav class="navbar fixed-top navbar-expand-sm navbar-dark bg-dark">
        <span class="navbar-brand mb-0 h1">Scraper</span>

        <div class="navbar-nav mr-auto">
            <a class="nav-link" href="/">Home</a>
            <a class="nav-link" href="/saved">Saved Articles</a>
            <span class="nav-item">&nbsp;</span>

        </div>

        {{!-- button --}}
        <div class="navbar-nav">
            <button type="button" class="btn btn-sm" id="scrapeButton">Scrape Articles</button>
        </div>

        {{!-- search --}}
        <form class="form-inline">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
    </nav>

    </div>
    </div>
    </nav>

    {{!-- results --}}
    <div class="modal fade" id="scrapeModal" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title" id="scrapeModalLabel">Scrape Results</h5>
                    <button type="button" class="close" id="closeModal" data-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <h3 class="text-center" id="numArticles"></h3>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="closeModal" data-dismiss="modal">OK</button>
                </div>

            </div>
        </div>
    </div>

    {{{ body }}} 
    {{!-- script --}}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.1/umd/popper.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/4.4.0/bootbox.min.js"></script>
    <script src="./js/app.js"></script>

</body>

</html>